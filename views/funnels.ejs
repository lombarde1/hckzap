async function deleteAllFunnels() {
    const result = await Swal.fire({
        title: 'Tem certeza?',
        text: "Isso ir√° apagar todos os seus funis. Esta a√ß√£o n√£o pode ser revertida!",
        icon: 'warning',
        showCancelButton: true,
