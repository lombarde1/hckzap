                iconColor: 'text-green-600',
                badgeColor: 'bg-green-100',
                textColor: 'text-green-800'
            },
            funnel_edit: {
                icon: 'fas fa-filter',
                label: 'Edi√ß√£o de Funil',
                bgColor: 'bg-purple-100',
                iconColor: 'text-purple-600',
                badgeColor: 'bg-purple-100',
                textColor: 'text-purple-800'
            },
            instance_connection: {
